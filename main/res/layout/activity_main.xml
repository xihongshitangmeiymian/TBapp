<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1280dp"
    android:layout_height="800dp"
    android:orientation="horizontal"
    android:background="#F5F5F5"
    android:id="@+id/main"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5.5"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="传感器实时数据"
            android:textSize="28sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:paddingBottom="15dp"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E0E0E0"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="3"
            android:useDefaultMargins="true"
            android:alignmentMode="alignMargins">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#F0F8FF"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="温度传感器"
                    android:textSize="20sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tv_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25.6 °C"
                    android:textSize="32sp"
                    android:textColor="#2196F3"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#E0F7FA"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="湿度传感器"
                    android:textSize="20sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tv_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="48 %RH"
                    android:textSize="32sp"
                    android:textColor="#00BCD4"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#FFFDE7"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="光照传感器"
                    android:textSize="20sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tv_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3800 lux"
                    android:textSize="32sp"
                    android:textColor="#FFC107"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#FFEBEE"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="火焰传感器"
                    android:textSize="20sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tv_flame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未检测到"
                    android:textSize="32sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#F3E5F5"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二氧化碳传感器"
                    android:textSize="20sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tv_co2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="420 ppm"
                    android:textSize="32sp"
                    android:textColor="#9C27B0"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#E8F5E9"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安全光栅"
                    android:textSize="20sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tv_light_curtain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正常"
                    android:textSize="32sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"/>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4.5"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="#F9F9F9">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="执行器控制"
            android:textSize="28sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:paddingBottom="15dp"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E0E0E0"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="4"
            android:useDefaultMargins="true"
            android:alignmentMode="alignMargins">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#FFFFFF"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="警示灯"
                    android:textSize="22sp"
                    android:textColor="#666666"/>

                <Switch
                    android:id="@+id/switch_warning_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:scaleX="2"
                    android:scaleY="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#FFFFFF"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风扇"
                    android:textSize="22sp"
                    android:textColor="#666666"/>

                <Switch
                    android:id="@+id/switch_fan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:scaleX="2"
                    android:scaleY="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#FFFFFF"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水泵"
                    android:textSize="22sp"
                    android:textColor="#666666"/>

                <Switch
                    android:id="@+id/switch_water_pump"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:scaleX="2"
                    android:scaleY="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#FFFFFF"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蜂鸣器"
                    android:textSize="22sp"
                    android:textColor="#666666"/>

                <Switch
                    android:id="@+id/switch_buzzer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:scaleX="2"
                    android:scaleY="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#FFFFFF"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报警灯"
                    android:textSize="22sp"
                    android:textColor="#666666"/>

                <Switch
                    android:id="@+id/switch_alarm_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:scaleX="2"
                    android:scaleY="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#FFFFFF"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电动推杆"
                    android:textSize="22sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_push_forward"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:text="前"
                        android:textSize="20sp"
                        android:layout_marginRight="15dp"/>

                    <Button
                        android:id="@+id/btn_push_stop"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:text="停"
                        android:textSize="20sp"
                        android:layout_marginRight="15dp"/>

                    <Button
                        android:id="@+id/btn_push_backward"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:text="后"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</LinearLayout>